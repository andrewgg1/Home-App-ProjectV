<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeUIWithMAUI.CamerasPage"
             Title="Cameras">

    <ContentPage.Content>
        <ScrollView Padding="20">
            <VerticalStackLayout Spacing="10">
                <Label Text="Cameras" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

                <Frame BorderColor="Gray" Padding="10" CornerRadius="10">
                    <Label Text="Front Doorbell Camera" FontSize="18" />
                    <Button Text="View" BackgroundColor="Blue" TextColor="White" Clicked="OnViewCameraClicked" />
                </Frame>

                <Frame BorderColor="Gray" Padding="10" CornerRadius="10">
                    <Label Text="Backyard Camera" FontSize="18" />
                    <Button Text="View" BackgroundColor="Blue" TextColor="White" Clicked="OnViewCameraClicked" />
                </Frame>

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
