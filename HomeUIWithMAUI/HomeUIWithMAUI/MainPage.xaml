<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeUIWithMAUI.MainPage">

    <!-- Main Content Container -->
    <Grid>
        <!-- Define two columns for layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Side Navigation Menu (Left Panel) -->
        <StackLayout Grid.Column="0" Padding="20" BackgroundColor="#F5F5F5" Spacing="25">
            <!-- Home Icon and Label -->
            <StackLayout Orientation="Horizontal" Spacing="10">
                <Image Source="home_icon.png" HeightRequest="40" WidthRequest="40" />
                <Label Text="Home" FontSize="18" FontAttributes="Bold" />
            </StackLayout>

            <!-- Wi-Fi Icon and Label -->
            <StackLayout Orientation="Horizontal" Spacing="10">
                <Image Source="wifi_icon.png" HeightRequest="30" WidthRequest="30" />
                <Label Text="Wi-Fi" FontSize="16" />
            </StackLayout>

            <!-- Water Icon and Label -->
            <StackLayout Orientation="Horizontal" Spacing="10">
                <Image Source="water_icon.png" HeightRequest="30" WidthRequest="30" />
                <Label Text="Water" FontSize="16" />
            </StackLayout>

            <!-- Devices Icon and Label -->
            <StackLayout Orientation="Horizontal" Spacing="10">
                <Image Source="devices_icon.png" HeightRequest="30" WidthRequest="30" />
                <Label Text="Devices" FontSize="16" />
            </StackLayout>

            <!-- Security Icon and Label -->
            <StackLayout Orientation="Horizontal" Spacing="10">
                <Image Source="security_icon.png" HeightRequest="30" WidthRequest="30" />
                <Label Text="Security" FontSize="16" />
            </StackLayout>

            <!-- Electricity Icon and Label -->
            <StackLayout Orientation="Horizontal" Spacing="10">
                <Image Source="electricity_icon.png" HeightRequest="30" WidthRequest="30" />
                <Label Text="Electricity" FontSize="16" />
            </StackLayout>

            <!-- Settings Icon and Label -->
            <StackLayout Orientation="Horizontal" Spacing="10">
                <Image Source="settings_icon.png" HeightRequest="30" WidthRequest="30" />
                <Label Text="Settings" FontSize="16" />
            </StackLayout>
        </StackLayout>

        <!-- Main Content (Right Panel) -->
        <ScrollView Grid.Column="1" Padding="20">
            <VerticalStackLayout Spacing="25">
               
                    <Label Text="Home Automation Dashboard" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

                    <!-- Command Input Section -->
                    <Entry x:Name="UserCommandEntry" Placeholder="Type your command..." FontSize="18" />
                    <Button Text="Execute Command" BackgroundColor="Blue" TextColor="White"
                            Clicked="OnExecuteCommandClicked" />
                    <Label x:Name="CommandResponseLabel" FontSize="18" TextColor="Green" />

                  
                <!-- Devices Section -->
                <Label Text="Devices" FontSize="24" FontAttributes="Bold" />

                <Frame BorderColor="Gray" Padding="10" CornerRadius="10">
                    <VerticalStackLayout>
                        <Label Text="Smart Light - Status: On" FontSize="18" />
                        <Switch x:Name="WiproSmartBulbSwitch" IsToggled="True" />
                        <Button Text="Turn Off" BackgroundColor="Red" TextColor="White" Clicked="OnToggleLightClicked" />
                    </VerticalStackLayout>
                </Frame>

                <Frame BorderColor="Gray" Padding="10" CornerRadius="10">
                    <VerticalStackLayout>
                        <Label Text="Thermostat - Status: 72°F" FontSize="18" />
                        <Switch x:Name="ThermostatSwitch" IsToggled="False" />
                        <Button Text="Adjust" BackgroundColor="Blue" TextColor="White" Clicked="OnAdjustThermostatClicked" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Wi-Fi Section -->
                <Label Text="Wi-Fi" FontSize="24" FontAttributes="Bold" />
                <Frame BorderColor="Gray" Padding="10" CornerRadius="10">
                    <VerticalStackLayout>
                        <Label Text="Wi-Fi Network - Status: Connected" FontSize="18" />
                        <Switch x:Name="WiFiSwitch" Toggled="OnToggleWiFiClicked" />
                        <Button Text="Disconnect" BackgroundColor="Red" TextColor="White" Clicked="OnDisconnectButtonClicked" />
                    </VerticalStackLayout>
                </Frame>


                <!-- Electricity Section -->
                <Label Text="Electricity" FontSize="24" FontAttributes="Bold" />
                <Frame BorderColor="Gray" Padding="10" CornerRadius="10">
                    <VerticalStackLayout>
                        <Label Text="Current Usage: 4.5 kWh" FontSize="18" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Xiaomi Smartfan -->
                <Frame BorderColor="Gray" Padding="10" CornerRadius="10">
                    <VerticalStackLayout>
                        <Label Text="Fan - Status: Off" FontSize="18" />
                        <Switch x:Name="XiaomiSmartFanSwitch" IsToggled="False" />
                        <Button Text="Toggle Fan" BackgroundColor="Blue" TextColor="White" Clicked="OnToggleFanClicked" />
                    </VerticalStackLayout>
                </Frame>


                <Label Text="Home Automation Dashboard" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

                <Button Text="Living Room" BackgroundColor="Blue" TextColor="White" 
                    Clicked="OnLivingRoomClicked" />
                <Button Text="Bedroom" BackgroundColor="Purple" TextColor="White" 
                    Clicked="OnBedroomClicked" />
                <Button Text="Kitchen" BackgroundColor="Green" TextColor="White" 
                    Clicked="OnKitchenClicked" />
                <Button Text="Energy Monitoring" BackgroundColor="Orange" TextColor="White" 
                    Clicked="OnEnergyClicked" />
                <Button Text="Automation and Scenes" BackgroundColor="Red" TextColor="White" 
                    Clicked="OnAutomationClicked" />
                <Button Text="Wi-Fi Management" BackgroundColor="Gray" TextColor="White" 
                    Clicked="OnWiFiClicked" />
                <Button Text="Device Management" BackgroundColor="DarkBlue" TextColor="White"
                    Clicked="OnDeviceManagementClicked" />
                <Button Text="Notifications and Alerts" BackgroundColor="DarkRed" TextColor="White"
                    Clicked="OnNotificationsClicked" />
                <Button Text="Profile And Settings" BackgroundColor="DarkGray" TextColor="White"
                    Clicked="OnProfileAndSettingsClicked" />
                <Button Text="Security and Access Control" BackgroundColor="DarkRed" TextColor="White"
                    Clicked="OnSecurityAndAccessClicked" />
                <Button Text="Voice Control Simulation" BackgroundColor="DarkBlue" TextColor="White"
                    Clicked="OnVoiceControlClicked" />



                <!--Dashboard Summary Frame-->
                <Frame BackgroundColor="#4CAF50" Padding="10" Margin="10"
                    CornerRadius="10" HasShadow="True" Grid.Row="0" Grid.Column="1">
                    <StackLayout Orientation="Vertical" HorizontalOptions="Center">
                        <Label Text="System Status: All Devices Operating Normally" 
                                    FontSize="18" FontAttributes="Bold" 
                                    TextColor="White" HorizontalOptions="Center"/>
                        <Label Text="Last Alert: No recent alerts" 
                                    FontSize="14" TextColor="White" Margin="5"/>
                    </StackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>
       
    </Grid>

</ContentPage>
