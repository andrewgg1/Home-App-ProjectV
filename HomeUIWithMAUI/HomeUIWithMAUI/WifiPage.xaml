<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeUIWithMAUI.WifiPage"
             Title="WifiPage">
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="25">
            <Label Text="Wi-Fi Management" FontSize="24" FontAttributes="Bold" />

            <Frame BorderColor="Gray" Padding="10" CornerRadius="10">
                <VerticalStackLayout>
                    <Label Text="Network Status: Connected" x:Name="NetworkStatusLabel" FontSize="18" />
                    <Switch x:Name="WiFiSwitch" IsToggled="True" 
                            Toggled="OnWiFiToggled" />
                </VerticalStackLayout>
            </Frame>

            <Frame BorderColor="Gray" Padding="10" CornerRadius="10">
                <VerticalStackLayout>
                    <Button Text="Disconnect" BackgroundColor="Red" TextColor="White"
                            Clicked="OnDisconnectClicked" />
                    <Button Text="Reconnect" BackgroundColor="Green" TextColor="White"
                            Clicked="OnReconnectClicked" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>