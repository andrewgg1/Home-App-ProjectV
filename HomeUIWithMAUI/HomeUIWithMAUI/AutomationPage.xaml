<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeUIWithMAUI.AutomationPage"
             Title="AutomationPage">
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="25">
            <Label Text="Automation and Scenes" FontSize="24" FontAttributes="Bold" />

            <Frame BorderColor="Gray" Padding="10" CornerRadius="10">
                <VerticalStackLayout>
                    <Label Text="Select a Scene:" FontSize="18" />

                    <Button Text="Good Morning" BackgroundColor="Blue" TextColor="White"
                            Clicked="OnGoodMorningClicked" />
                    <Button Text="Good Night" BackgroundColor="Purple" TextColor="White"
                            Clicked="OnGoodNightClicked" />
                    <Button Text="All Devices Off" BackgroundColor="Red" TextColor="White"
                            Clicked="OnAllDevicesOffClicked" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>