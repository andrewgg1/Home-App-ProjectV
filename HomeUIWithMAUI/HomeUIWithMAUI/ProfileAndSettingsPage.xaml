<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeUIWithMAUI.ProfileAndSettingsPage"
             Title="Profile And Settings">

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="25">
            <Label Text="User Profile" FontSize="24" FontAttributes="Bold" />

            <!-- Ensure the Entry has a valid x:Name -->
            <Entry x:Name="UserNameEntry" Placeholder="Enter your name" />
            <Entry x:Name="EmailEntry" Placeholder="Enter your email" Keyboard="Email" />

            <Label Text="Settings" FontSize="24" FontAttributes="Bold" Margin="0,20,0,0" />

            <Switch x:Name="NotificationsSwitch" IsToggled="True" />
            <Label Text="Enable Notifications" />

            <Switch x:Name="DarkModeSwitch" IsToggled="False" />
            <Label Text="Enable Dark Mode" />

            <Button Text="Save Changes" BackgroundColor="Blue" TextColor="White"
                    Clicked="OnSaveChangesClicked" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
