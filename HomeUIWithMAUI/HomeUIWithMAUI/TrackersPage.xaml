<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeUIWithMAUI.TrackersPage"
             Title="Trackers">

    <ContentPage.Content>
        <ScrollView Padding="20">
            <VerticalStackLayout Spacing="10">
                <Label Text="Trackers" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

                <Frame BorderColor="Gray" Padding="10" CornerRadius="10">
                    <Label Text="Car GPS Tracker" FontSize="18" />
                    <Button Text="Locate" BackgroundColor="Blue" TextColor="White" Clicked="OnLocateTrackerClicked" />
                </Frame>

                <Frame BorderColor="Gray" Padding="10" CornerRadius="10">
                    <Label Text="Bike GPS Tracker" FontSize="18" />
                    <Button Text="Locate" BackgroundColor="Blue" TextColor="White" Clicked="OnLocateTrackerClicked" />
                </Frame>

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
