<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeUIWithMAUI.SensorsPage"
             Title="Sensors">

    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="10">
            <Label Text="Sensors" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

            <Frame BorderColor="Gray" Padding="10" CornerRadius="10">
                <Label Text="Motion Sensor (Front Yard)" FontSize="18" />
                <Button Text="Enable/Disable" BackgroundColor="Blue" TextColor="White" Clicked="OnSensorToggleClicked" />
            </Frame>

            <Frame BorderColor="Gray" Padding="10" CornerRadius="10">
                <Label Text="Glass Break Sensor" FontSize="18" />
                <Button Text="Enable/Disable" BackgroundColor="Blue" TextColor="White" Clicked="OnSensorToggleClicked" />
            </Frame>

            <!-- Add similar frames for other sensors as needed -->

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
